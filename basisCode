<script>

/* ---------------------------------------------------- navigation buttons -----------------------------------------------------*/

var divider1 = document.getElementById("divider1");
var divider2 = document.getElementById("divider2");
var divider3 = document.getElementById("divider3");

function scrollToTop(){
    document.documentElement.scrollTop = 0;
    document.body.scrollTop = 0;
}

function scrollTo1(){
    divider1.scrollIntoView(true);
}

function scrollTo2(){
    divider2.scrollIntoView(true);
}

function scrollTo3(){
    divider3.scrollIntoView(true);
}

/* ---------------------------------------------------- header alteration -----------------------------------------------------*/

window.onscroll = function() {changeHead()};

function changeHead(){
    if (document.body.scrollTop > 610) {
        document.getElementById("headerBlock").style.position = "fixed";
        document.getElementById("headerBlock").style.height = "90px";
        document.getElementById("titleSpace").style.display = "none";
        document.getElementById("titleSpace2").style.display = "none";
        document.getElementById("headerButton").style.marginTop = "30px";
        document.getElementById("fillerBlock").style.display = "inline-block";
    }
    else {
        document.getElementById("headerBlock").style.position = "static";
        document.getElementById("headerBlock").style.height = "710px";
        document.getElementById("titleSpace").style.display = "inline-block";
        document.getElementById("titleSpace2").style.display = "inline-block";
        document.getElementById("headerButton").style.marginTop = "-150px";
        document.getElementById("fillerBlock").style.display = "none";
         }
    }  

</script>

